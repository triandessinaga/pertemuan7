<!DOCTYPE html>
<html>
  <head>
    <title>Data Mahasiswa</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css" />
  </head>
  <body>
    <h2>Daftar Mahasiswa</h2>
    <a href="/mahasiswa/tambah">Tambah Mahasiswa</a>
    <table border="1">
      <tr>
        <th>Nama</th>
        <th>NIM</th>
        <th>Jurusan</th>
        <th>Aksi</th>
      </tr>
      <% mahasiswa.forEach(m => { %>
      <tr>
        <td><%= m.nama %></td>
        <td><%= m.nim %></td>
        <td><%= m.jurusan %></td>
        <td>
          <a href="/mahasiswa/edit/<%= m._id %>">Edit</a>
          <a href="/mahasiswa/hapus/<%= m._id %>">Hapus</a>
        </td>
      </tr>
      <% }) %>
    </table>
  </body>
</html>
